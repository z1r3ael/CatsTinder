<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/rootRandomCatsFragment">

    <fragment
        android:id="@+id/rootRandomCatsFragment"
        android:name="com.example.week8catsnavigation.fragments.RootRandomCatsFragment"
        android:label="fragment_root_random_cats"
        tools:layout="@layout/fragment_root_random_cats">
        <action
            android:id="@+id/action_rootRandomCatsFragment_to_favoriteCatsFragment"
            app:destination="@id/favoriteCatsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteCatsFragment"
        android:name="com.example.week8catsnavigation.fragments.FavoriteCatsFragment"
        android:label="fragment_favorite_cats"
        tools:layout="@layout/fragment_favorite_cats" />
    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.example.week8catsnavigation.fragments.AboutAppFragment"
        android:label="fragment_about_app"
        tools:layout="@layout/fragment_about_app" />
</navigation>